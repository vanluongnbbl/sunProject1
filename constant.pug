mixin img(src)
    img(src=src)
    
mixin blog(item)
    - for (let i = 0; i < 4; i++)
        .blog__item
            img(src=item.src, alt=item.alt).img-post
            a(href=item.href).blog__item__title=item.title
            .blog__item__date
                .date 
                    span.text=item.text1
                    span.text=item.text2
                .post-by
                    img(src=item.src2 , alt=item.alt2) 
                    span.text=item.text3
                    span.design=item.text4
                .comment
                    img(src=item.src3, alt=item.alt3)
                    span.text=item.text5
                    span.text=item.text6
            .blog__item__desc=item.desc